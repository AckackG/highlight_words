{
  "manifest_version": 3,
  "name": "Vocabulary Highlighter & Notebook",
  "version": "2.0",
  "description": "高亮生词、划词翻译、语境记忆与生词本管理",
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/*"
  ],
  "action": {
    "default_title": "Vocabulary Notebook"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/highlight-colors.js",

        "content/selection-ui.js",
        "content/content.js"
      ],
      "css": ["content/styles.css"]
    }
  ],
  "options_page": "dashboard/index.html",
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}